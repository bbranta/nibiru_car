<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.motorola.carroagora.CarDetailsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Ford Fiesta"
        style="@style/Base.TextAppearance.AppCompat.Title"
        android:id="@+id/textDetailsTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textDetailsTitle"
        android:text="2015, ABC-1234"
        style="@style/Base.TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
        android:id="@+id/textDetailsSubtitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gasolina"
        android:id="@+id/textDetailsFuel"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textDetailsSubtitle" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/textDetailsFuel"
        android:layout_margin="10dp"
        android:id="@+id/viewHorizontalRule" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$42,00"
        android:id="@+id/textDetailsPrice"
        android:layout_below="@+id/viewHorizontalRule"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25/12/2015, 16:00 às 18:00"
        android:id="@+id/textDetailsTime"
        android:layout_below="@+id/textDetailsPrice"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="João Andante"
        android:id="@+id/textDetailsOwnerName"
        android:layout_below="@+id/textDetailsTime"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(19) 99999-8888"
        android:id="@+id/textDetailsOwnerPhone"
        android:layout_below="@+id/textDetailsOwnerName"
        android:layout_alignParentStart="true"
        android:onClick="onClickTel" />
</RelativeLayout>
